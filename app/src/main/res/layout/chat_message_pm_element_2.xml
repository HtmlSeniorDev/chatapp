<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_chat_message"
    android:layout_width="fill_parent"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_height="fill_parent">
    <View
        android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:padding="6dp"
        android:background="@drawable/bg_msg_you"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ll_chat_message_element_content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="right"
            android:minWidth="200dp"
            android:orientation="vertical"
            android:paddingBottom="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp">


            <io.github.rockerhieu.emojicon.EmojiconTextView
                android:id="@+id/tv_chat_message_element_message_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:gravity="right"
                android:text="приватное сообщение"
                android:textColor="@color/white"
                android:textSize="14sp" />



            <LinearLayout
                android:id="@+id/ll_chat_message_element_attachments"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"></LinearLayout>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
