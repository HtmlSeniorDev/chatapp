<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon">
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#3000"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_edit_profile_photo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginRight="16dp"
                android:layout_weight="0"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/ed_edit_profile_user_nic"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/rounded_edit_text"
                    android:gravity="center"
                    android:hint="Ник"
                    android:lines="1"
                    android:maxLength="20"
                    android:textColor="#ffffff"
                    android:textColorHint="#FFFFFF"
                    android:enabled="false"
                    android:visibility="visible"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/bt_edit_profile_color"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginLeft="8dp"
                android:background="@drawable/bg_circle_bt" />

        </LinearLayout>

        <View
            android:id="@+id/v1"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/l1" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/l1"
            android:background="@drawable/shandow_line" />


        <LinearLayout
            android:id="@+id/l2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="#3000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/first_name_last_name"
                android:textColor="@color/white" />

                <EditText
                    android:id="@+id/ed_edit_profile_user_first_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="Имя"
                    android:layout_margin="6dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:inputType="text"/>

                <EditText
                    android:id="@+id/ed_edit_profile_user_last_name"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="Фамилия"
                    android:layout_margin="6dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:inputType="text"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/l2"
            android:background="@drawable/shandow_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@+id/l2"
            android:background="@drawable/shandow_line_180" />


        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/l2" />


        <LinearLayout
            android:id="@+id/l3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v2"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:background="#3000">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/more_info"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/sextext"
                android:textColor="@color/white"
                android:gravity="center"/>
            <Spinner
                android:id="@+id/spinner_sex"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:entries="@array/sexlist"
                android:background="@drawable/rounded_edit_text"
                android:textAlignment="center" />

                <EditText
                    android:id="@+id/ed_edit_profile_user_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="Город"
                    android:layout_margin="6dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:inputType="text"/>

            <Button
                android:id="@+id/bt_edit_profile_bday"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:text="Дата рождения"
                android:textColor="#FFFFFF"
                android:background="@drawable/rounded_button" />

                <EditText
                    android:id="@+id/ed_edit_profile_user_about"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/rounded_edit_text"
                    android:hint="О себе"
                    android:layout_margin="6dp"
                    android:textColor="#ffffff"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:inputType="text" />



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/l3"
            android:background="@drawable/shandow_line" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@+id/l3"
            android:background="@drawable/shandow_line_180" />


        <View
            android:id="@+id/v3"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/l3" />


        <LinearLayout
            android:id="@+id/l4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/v3"
            android:background="@drawable/rounded_edit_text"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:text="@string/user_type"
                android:textColor="@color/white" />

            <RadioGroup
                android:id="@+id/rg_edit_profile_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                android:text="@string/user_type" />

                <RadioButton
                    android:id="@+id/rb_edit_profile_invisible"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/user_invisible"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/rb_edit_profile_admin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/user_admin"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/rb_edit_profile_moder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/user_moder"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/rb_edit_profile_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/user_user"
                    android:textColor="@color/white"/>

                <RadioButton
                    android:id="@+id/rb_edit_profile_banned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:text="@string/user_banned"
                    android:textColor="@color/white"/>
            </RadioGroup>

        </LinearLayout>

        <View
            android:id="@+id/v4"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_below="@+id/l4" />

        <View
            android:id="@+id/s1"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/l4"
            android:background="@drawable/shandow_line" />

        <View
            android:id="@+id/s2"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_above="@+id/l4"
            android:background="@drawable/shandow_line_180" />

    </RelativeLayout>
</ScrollView>
</LinearLayout>