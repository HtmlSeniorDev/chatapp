<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="95dp"
    android:layout_height="75dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:background="@color/grey">

        <ImageView
            android:scaleType="centerInside"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_attachment_element_bg" />

        <ImageView
            android:id="@+id/iv_attachment_element_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="4dp"
            android:src="@drawable/ic_insert_drive_file_deep_orange_700_24dp" />

        <TextView
            android:gravity="center"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="2dp"
            android:id="@+id/tv_attachment_element_name"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_attachment_element_icon"
            android:layout_centerHorizontal="true"
            android:text="Название файла.pdf"
            android:textColor="@color/white"
            android:textSize="10sp" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/ib_attachment_element_delete"
        android:layout_alignParentRight="true"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/bt_transporent"
        android:src="@drawable/ic_cancel_red_800_18dp" />
</RelativeLayout>